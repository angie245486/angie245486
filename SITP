package Medio_de_transporte;
public class SITP
{
    
    private String Marca;
    private String Modelo;
    private int Cilindraje;
    private String color;
    private int capacidad;
    private int capacidad1;

    public SITP(String Marca, String Modelo, int Cilindraje, String color, int capacidad, int capacidad1) {
        this.Marca = Marca;
        this.Modelo = Modelo;
        this.Cilindraje = Cilindraje;
        this.color = color;
        this.capacidad = capacidad;
        this.capacidad1 = capacidad;
        
        
    }

    public String getMarca() {
        return Marca;
    }

    public String getModelo() {
        return Modelo;
    }

    public int getCilindraje() {
        return Cilindraje;
    }

    public String getColor() {
        return color;
    }

    public int getCapacidad() {
        return capacidad;
    }

    public int getCapacidad1() {
        return capacidad1;
    }
    
    
    
    public void mostrarDatos()
    {
        System.out.println("----SITP-----\n"+"La marca del SITP es:"+getMarca());
        System.out.println("El modelo del SITP es:"+getModelo());
        System.out.println("El cilindraje del SITP es:"+getCilindraje());
        System.out.println("El color del SITP es:"+getColor());
        System.out.println("La capacidad del SITP es:"+getCapacidad());
        System.out.println("La  del SITP es:"+getCapacidad1());
    }
    
    
    
    
}
