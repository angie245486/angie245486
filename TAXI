package Medio_de_transporte;
public class TAXI 
{
    
    private String Marca;
    private String Modelo;
    private int Cilindraje;
    private String color;
    private int capacidad;
    private String capacidad1;

    public TAXI(String Marca, String Modelo, int Cilindraje, String color, int capacidad, String capacidad1) {
        this.Marca = Marca;
        this.Modelo = Modelo;
        this.Cilindraje = Cilindraje;
        this.color = color;
        this.capacidad = capacidad;
        this.capacidad1 = capacidad1;
    }

    public String getMarca() {
        return Marca;
    }

    public String getModelo() {
        return Modelo;
    }

    public int getCilindraje() {
        return Cilindraje;
    }

    public String getColor() {
        return color;
    }

    public int getCapacidad() {
        return capacidad;
    }

    public String getCapacidad1() {
        return capacidad1;
    }
    
    
    public void mostrarDatos()
    {
        System.out.println("----TAXI----\n"+"La marca del TAXI es:"+getMarca());
        System.out.println("El modelo del TAXI es:"+getModelo());
        System.out.println("El cilindraje del TAXI es:"+getCilindraje());
        System.out.println("El color del TAXI es:"+getColor());
        System.out.println("La capacidad del TAXI es:"+getCapacidad());
        System.out.println("La  del TAXI es:"+getCapacidad1());
    }
    
    
    
}

